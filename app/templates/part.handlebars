<header>
  <dl>
    <dt><label for='beats'>Beats</label></dt>
    <dd>
      {{number-input min=1 max=32 value=beat_count}}
    </dd>
  </dl>
  {{ render 'instrument' instrument }}
</header>
<section id='piano-roll'>
  <section id='grid'>
    <div class='play-bar'></div>
    {{beat-list content=beats}}
    <ul>
      {{#each pitch in pitches}}
        {{render 'pitch' pitch}}
      {{/each}}
    </ul>
  </section>
  <ul id='keyboard'>
    {{#each pitch in pitches}}
      {{#render 'piano-key' pitch}}
        {{name}}
      {{/render}}
    {{/each}}
  </ul>
</section>
