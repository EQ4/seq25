<header>
  <dl>
    <dt><label for='beats'>Beats</label></dt>
    <dd>
      {{view 'number' min=1 max=32 id='beats' value=beat_count}}
    </dd>
    <dt>
      <label for='quant'>Quant</label>
    </dt>
    <dd>
      {{view 'number' min=1 max=Seq25.Note.TICKS_PER_BEAT id='quant' value=quant}}
    </dd>
  </dl>
  {{ render 'instrument' instrument }}
</header>
<section id='piano-roll'>
  <section id='grid'>
    <div {{bind-attr style=playBarStyle}} class='play-bar'></div>
    {{beat-list content=beats}}
    <ul>
      {{#each pitch in pitches}}
        {{render 'pitch' pitch}}
      {{/each}}
    </ul>
  </section>
  <ul id='keyboard'>
    {{#each pitch in pitches}}
      {{#render 'piano-key' pitch}}
        {{name}}
      {{/render}}
    {{/each}}
  </ul>
</section>
