<header>
  <dl>
    <dt><label for='tempo'>Tempo</label></dt>
    <dd>{{number-input min=0 max=480 value=tempo action='setTempo' id='tempo'}}</dd>
  </dl>
  <dl>
    <dt><label for='beats'>Beats</label></dt>
    <dd>{{number-input min=1 max=32 value=beat_count action='setBeatCount' id='beats'}}</dd>
  </dl>
  {{render 'transport' model }}
</header
<section id='piano-roll'>
  <section id='grid'>
    <div id='play-bar'></div>
    {{beat-list content=beats}}
    <ul>
      {{#each pitch in pitches}}
      <li {{bind-attr class="isSharp:sharp :row"}}>
        {{note-list content=pitch.notes}}
      </li>
      {{/each}}
    </ul>
  </section>
  <ul id='keyboard'>
    {{#each pitch in pitches}}
      {{#piano-key}}
        {{name}}
      {{/piano-key}}
    {{/each}}
  </ul>
</section>
